#!/bin/sh
#
# Marksyncr Pre-commit Hook
# Runs lint and build checks before allowing commits
#
# To install: git config core.hooksPath .githooks
# Or run: pnpm setup:hooks
#

set -e

echo "Running pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Function to run a check
run_check() {
    local name="$1"
    local cmd="$2"

    echo "----------------------------------------"
    echo "  $name"
    echo "----------------------------------------"

    if eval "$cmd"; then
        echo "${GREEN}  $name passed${NC}"
        echo ""
    else
        echo "${RED}  $name failed${NC}"
        echo ""
        FAILED=1
    fi
}

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Skip if no files staged
if [ -z "$STAGED_FILES" ]; then
    echo "No files staged for commit."
    exit 0
fi

# 1. Linting
run_check "Lint" "pnpm lint"

# 2. Build check
run_check "Build" "pnpm build"

# Final result
echo "----------------------------------------"
if [ $FAILED -eq 1 ]; then
    echo "${RED}  Pre-commit checks failed!${NC}"
    echo ""
    echo "Fix the issues above before committing."
    echo "To bypass (not recommended): git commit --no-verify"
    exit 1
else
    echo "${GREEN}  All pre-commit checks passed!${NC}"
    echo ""
fi
